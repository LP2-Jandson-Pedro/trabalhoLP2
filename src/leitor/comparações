	public static boolean compara(String str1, String str2){
		
	//		Transorma as strings em um vetor de char
		char[] w1 = new char[str1.length()];
		w1 = str1.toCharArray();
		
		char[] w2 = new char[str2.length()];
		w2 = str2.toCharArray();

	//		Primeiro critério de similaridade:
	//		Conta a quantidade de diferenças ou a "Distância de edição" proposta na descricao do trabalho
		if(str1.length() == str2.length()){
			int cdif = 0; 
			
			for(int i = 0; i < str1.length(); i++){
				if(w1[i] != w2[i])
					cdif++;
			}
			
			if(cdif == 1)
				return true;
		}
	//		Segundo critério de similaridade
		else{
			String strMaior;
			String strMenor;
			
	//			Pego a maior e menor string
			if(str1.length() > str2.length()){
				strMaior = str1;
				strMenor = str2;
			}
			else{
				strMaior = str2;
				strMenor = str1;
			}
			w1 = strMaior.toCharArray();
			w2 = strMenor.toCharArray();

	//			Verifico se a diferenca de tamanho é apenas em 1 unidade
			if((strMaior.length() - strMenor.length()) == 1){
				
				
				if(strMaior.contains((CharSequence)strMenor)){
					return true;
				}
				else if(strMaior.charAt(0) != strMenor.charAt(0)){
					if(strMaior.contains((CharSequence)strMenor))
						return true;
				}
				else{
					for(int i = 0; i < strMaior.length(); i++){
						if(w1[i] != w2[i]){
							String sub =  strMenor.substring(i);
							if(strMaior.contains((CharSequence)sub))
								return true;
						}						
					}
				}				
			}			
		}			
		return false;
	}

